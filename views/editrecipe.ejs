<div class="background"
     style="background-image: url(https://wallup.net/wp-content/uploads/2018/09/27/690186-busan-night-city-blur-.jpg); height: 100% !important;">
    <% include partials/header %>
    <p></p>
    <div class="container" style="width: 60%">
        <h1 style="text-align: center;">Edit Recipe</h1>
        <p></p>
        <form action="/recipes/<%= result[0]._id %>?_method=PUT" method="POST">
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Recipe Name</label>
                <div class="col-sm-10">
                    <input type="text" name="recipe[recipeName]" class="form-control" id="inputEmail3"
                           value="<%= result[0].recipeName %>"
                           required>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Recipe URL</label>
                <div class="col-sm-10">
                    <input type="text" name="recipe[recipeURL]" class="form-control" id="inputPassword3"
                           value="<%= result[0].recipeURL %>" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="exampleFormControlTextarea1" class="col-sm-2 col-form-label">Recipe Instructions</label>
                <div class="col-sm-10">
                <textarea name="recipe[recipeInstructions]" class="form-control" id="inputPassword3"
                          rows="5" required><%= result[0].recipeInstructions %></textarea>
                </div>
            </div>
            <div class="form-group row" style="justify-content: center;margin-left: 50% !important;">
                <div class="col-lg-12">
                    <button class="btn btn-md btn-warning" type="submit">Update Recipe</button>
                </div>
            </div>
        </form>
    </div>

    <% include partials/footer %>
</div>