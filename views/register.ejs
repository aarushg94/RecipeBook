<div class="background"
     style="background-image: url(/images/smoothgreen.jpg); height: 100% !important;">
    <% include partials/header %>
    <p></p>
    <div class="container" style="width: 20%;">
        <div class="text-center">
            <form class="form-signin" action="/register" method="POST">
                <img class="mb-4"
                     src="http://www.ritsms.com/wp-content/uploads/2017/02/yeni_kayit.png" width="210" height="200">
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="text" name="username" id="inputEmail" class="form-control" placeholder="username" required autofocus>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Password" required>
                <p></p>
                <button class="btn btn-md btn-info btn-block" type="submit">Register</button>
                <p></p>
                <span style="color: white; font-weight: bold; font-size: 1rem"> Already a user?</span><br> <a class="btn btn-success" href="/login" style="margin-top: 15px;">Login now</a>
            </form>
        </div>
    </div>
    <% include partials/footer %>
</div>