<div class="background"
     style="background-image: url(/images/purplelight.jpg); height: 100% !important;">
    <% include partials/header %>
<p></p>
<div class="container" style="width: 30%;margin-top: 50px;">
    <h3 style="text-align: center; color: white">Tag for "<%= result.recipeName %>"</h3><br>
    <p></p>
    <form action="/recipes/<%= result._id %>/comments" method="POST">
        <div class="form-group row">
            <div class="col-lg-12">
                <input type="text" name="text" class="form-control" id="inputTag"
                       placeholder="Add a single word as a tag"
                       required/>
                <script>
                    $("#inputTag").keyup(function () {
                        var text = $(this).val();
                        $(this).val(text.replace(/[^A-Za-z]/g, ''));
                    });
                </script>
            </div>
        </div>
        <div class="form-group row" style="text-align: center;">
            <div class="col-lg-12">
                <button class="btn btn-block btn-md btn-success" type="submit">Add Tag</button>
            </div>
        </div>
    </form>
</div>
<% include partials/footer %>
</div>