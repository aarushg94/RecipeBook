<% include partials/header %>
<p></p>
<div class="container" style="width: 60%">
    <h1 style="text-align: center;">Edit Comment</h1>
    <p></p>
    <form action="/recipes/<%= recipe_id %>/comments/<%= comment._id %>?_method=PUT"
          method="POST">
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Recipe Name</label>
            <div class="col-sm-10">
                <input type="text" name=comment[text]" class="form-control" id="inputEmail3"
                       value="<%= comment.text %>"
                       required>
            </div>
        </div>
        <div class="form-group row" style="justify-content: center;margin-left: 50% !important;">
            <div class="col-lg-12">
                <button class="btn btn-md btn-warning" type="submit">Update Comment</button>
            </div>
        </div>
    </form>
</div>
<% include partials/footer %>