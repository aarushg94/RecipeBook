<body>
<nav class="navbar navbar-expand-md navbar-dark bg-dark"
     style="left: 0;top: 0;width: 100%; text-align: center;padding: 30px; color: white; justify-content: center; height: 1px">
    <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/recipes">Recipes</a>
            </li>
        </ul>
    </div>
    <div class="mx-auto order-0">
        <a class="navbar-brand mx-auto" href="/">Social Web</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>

    <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
        <ul class="navbar-nav ml-auto">
            <% if(!currentUser){ %>
                <li class="nav-item">
                    <form class="form-inline my-2 my-lg-0" action="/recipes" method="GET">
                        <input type="text" name="search" placeholder="Search" class="form-control"
                               style="width: 60%;">&nbsp;
                        <button class="fas fa-search btn btn-outline-success my-2 my-sm-0" type="submit"
                                style="font-size: 23px"></button>
                    </form>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                </li>
            <% } else{ %>
                <li class="nav-item">
                    <form class="form-inline my-2 my-lg-0" action="/recipes" method="GET">
                        <input type="text" name="search" placeholder="Search" class="form-control" style="width: 60%;">
                        &nbsp;<button class="fas fa-search btn btn-outline-success my-2 my-sm-0" type="submit"
                                      style="font-size: 23px"></button>
                    </form>
                </li>
                <li class="nav-item">
                    <a class="nav-link fas fa-user"
                       style="color: ivory; font-size:20px; font-weight: bold;"></a>
                    <a href="/dashboard"
                       style="color: white">
                    <span class="link"
                          style="color: ivory;font-weight: bold;"> <%= currentUser.username %></span>
                    </a>
                </li>
                <li class=" nav-item">
                    <a class="nav-link fas fa-power-off" href="/logout" style="font-size: 20px;"></a>
                </li>
            <% } %>
        </ul>
    </div>
</nav>
<div class="container">
    <% if(error && error.length > 0) { %>
        <p></p>
        <div class="alert alert-danger"
             style="border: 1px solid black;text-align: center;width: 50%;margin-left: 25%;padding: 2px;">
            <%= error %>
        </div>
    <% } else if(success && success.length > 0) { %>
        <p></p>
        <div class="alert alert-success"
             style="border: 1px solid black;text-align: center;width: 50%;margin-left: 25%;padding: 2px;">
            <%= success %>
        </div>
    <% } %>
</div>