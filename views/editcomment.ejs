<div class="background"
     style="background-image: url(/images/purplelight.jpg); height: 100% !important;">
    <% include partials/header %>
    <p></p>
    &nbsp;
    <p></p>
    <div class="container" style="width: 20%">
        <h1 style="text-align: center; color: white">Edit Tag</h1>
        <p></p>
        <form action="/recipes/<%= recipe_id %>/comments/<%= comment._id %>?_method=PUT"
              method="POST">
            <hr>
            <div class="form-group row">
                <div class="col-sm-12">
                    <input type="text" name=comment[text]" class="form-control" id="inputEmail3"
                           value="<%= comment.text %>"
                           required>
                </div>
            </div>
            <div class="form-group row" style="text-align: center;">
                <div class="col-lg-12">
                    <button class="btn btn-block btn-md btn-warning" type="submit">Update Tag</button>
                </div>
            </div>
        </form>
    </div>
    <% include partials/footer %>
</div>