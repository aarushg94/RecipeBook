<div class="background"
     style="background-image: url(/images/purplelight.jpg); height: 100% !important;">
    <% include partials/header %>
    <p></p>
    <div class="container" style="width: 60%">
        <h1 style="text-align: center; color: white">Add new recipe</h1>
        <hr>
        <p></p>
        <form action="/recipes" method="POST">
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label" style="color: white; font-weight: bold">Recipe Name</label>
                <div class="col-sm-10">
                    <input type="text" name="recipeName" class="form-control" id="inputEmail3" placeholder="Recipe Name"
                           required>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label" style="color: white; font-weight: bold">Recipe URL</label>
                <div class="col-sm-10">
                    <input type="text" name="recipeURL" class="form-control" id="inputPassword3"
                           placeholder="Recipe Image URL" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="exampleFormControlTextarea1" class="col-sm-2 col-form-label" style="color: white; font-weight: bold">Recipe Instructions</label>
                <div class="col-sm-10">
                    <textarea name="recipeInstructions" class="form-control" id="inputPassword3" rows="5"
                              placeholder="Recipe Instructions" required></textarea>
                </div>
            </div>
            <div class="form-group row" style="text-align: center;">
                <div class="col-lg-12">
                    <button class="btn btn-md btn-success" type="submit">Add Recipe</button>
                </div>
            </div>
        </form>
    </div>

    <% include partials/footer %>
</div>